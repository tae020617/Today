package 메서드실습;

import java.util.Scanner;

public class Ex02큰수찾기 {
	public static void main(String[] args) {
		// 2개의 정수를 입력 받아서 더 큰 수를 반환하는 메서드 BigNum()
		Scanner sc = new Scanner(System.in);
		
		System.out.print("첫번째 정수 : ");
		int n1 = sc.nextInt();
		System.out.print("두번째 정수 : ");
		int n2 = sc.nextInt();
		
		int result = BigNum(n1, n2);
		System.out.print("입력받은 두 수 중에서 더 큰 수는 "+ result + "입니다");
	}
	
	public static int BigNum(int n1, int n2) {
		if(n1>=n2) {
			return n1;
		}else {
			return n2;
		}	
	}
}
